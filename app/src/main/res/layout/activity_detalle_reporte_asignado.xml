<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Header con flecha y título centrado -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <!-- Flecha atrás -->
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/outline_arrow_back_24"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Regresar"
                    android:padding="0dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"/>

                <!-- Título siempre centrado en pantalla -->
                <TextView
                    android:id="@+id/tvTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalle del reporte"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="48dp"
                    android:layout_marginEnd="48dp"/>
            </RelativeLayout>


            <!-- Tipo y botón Levantar en la misma línea -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/tvTipoTitulo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Condición insegura"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLevantar"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="Levantar"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:layout_marginLeft="8dp"
                        android:paddingLeft="24dp"
                        android:paddingRight="24dp"
                        app:cornerRadius="15dp"
                        app:backgroundTint="@color/colorAccent"
                        app:rippleColor="@color/colorAccent" />

            </LinearLayout>

            <!-- Descripción -->

            <TextView
                    android:id="@+id/tvDescripcionTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <!-- Lugar -->
            <TextView
                android:id="@+id/tvLugarTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/tvLugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <!-- Imagen -->
            <TextView
                android:id="@+id/tvImagenTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginTop="16dp"/>

            <ImageView
                android:id="@+id/imgReporte"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_image_placeholder"/>

            <!-- Historial de aprobación -->
            <TextView
                    android:id="@+id/tvHistorialTitulo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Historial de Cierre"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvEstadoRechazado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:visibility="gone"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/tvMotivoRechazo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:textColor="@android:color/holo_red_dark"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvEstadoAceptado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:visibility="gone"
                android:layout_marginBottom="4dp"/>

            <!-- Agregar este TextView después del tvEstadoAceptado -->
            <TextView
                android:id="@+id/tvNoHistorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No hay datos"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="start"
                android:textAlignment="viewStart"
                android:layout_marginTop="8dp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>