<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.administrador.ResumenActivity">

    <!-- Header con flecha y título alineados -->
    <LinearLayout
            android:id="@+id/headerLayout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/outline_arrow_back_24"
                android:contentDescription="Regresar"
                android:padding="8dp"
                android:layout_marginStart="-12dp"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Resumen"
                android:textStyle="bold"
                android:textSize="25sp"
                android:gravity="center"
                android:textColor="@color/textBlack"/>

        <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportar"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Exportar"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                app:cornerRadius="16dp"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginEnd="4dp"/>
    </LinearLayout>

    <!-- ScrollView para el contenido principal -->
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/headerLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- Filtros de fecha -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                <!-- Campo Desde -->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingEnd="8dp">

                    <TextView
                            android:text="Desde"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"/>

                    <EditText
                            android:id="@+id/etFechaDesde"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Selecciona fecha"
                            android:background="@drawable/edittext_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="15sp"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                            android:drawablePadding="8dp"/>
                </LinearLayout>

                <!-- Campo Hasta -->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="8dp">

                    <TextView
                            android:text="Hasta"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"/>

                    <EditText
                            android:id="@+id/etFechaHasta"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:hint="Selecciona fecha"
                            android:background="@drawable/edittext_background"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:textSize="15sp"
                            android:focusable="false"
                            android:clickable="true"
                            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                            android:drawablePadding="8dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Subtítulo tipo de hallazgo -->
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TIPO DE DATOS"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#888"
                    android:layout_marginBottom="4dp" />

            <!-- Spinner tipo de hallazgo con fondo y altura igual a reporte -->
            <Spinner
                    android:id="@+id/spinner_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/spinner_bg"
                    android:layout_marginBottom="24dp" />

            <!-- Título del gráfico -->
            <TextView
                    android:id="@+id/tvTituloGrafico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Condiciones inseguras"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="16dp"/> 

            <!-- Gráfico pastel con altura fija mayor -->
            <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"         
                    android:layout_height="280dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp"/>
                    
            <!-- Título del gráfico de barras -->
            <TextView
                    android:id="@+id/tvTituloGraficoBarras"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Niveles de riesgo"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/> 
                    
            <!-- Gráfico de barras con altura ajustada y sin margen inferior -->
            <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="0dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>