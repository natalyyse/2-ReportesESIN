<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.administrador.AsignarActivity">


        <LinearLayout
                android:orientation="vertical"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <!-- Header con back y título -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/outline_arrow_back_24"
                        android:contentDescription="Volver" />

                <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:text="Asignar Reporte"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/textBlack"
                        android:layout_marginEnd="48dp" />
            </LinearLayout>

            <!-- Responsable (correo electrónico) -->
            <TextView
                    android:text="Responsable"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <EditText
                    android:id="@+id/etResponsable"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"
                    android:hint="Ingrese el correo electrónico"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableStart="@android:drawable/ic_dialog_email"
                    android:drawablePadding="8dp" />

            <!-- Nivel de Riesgo -->
            <TextView
                android:id="@+id/tvNivelRiesgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nivel de Riesgo"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/textBlack"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/spinnerNivelRiesgo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/spinner_bg"
                android:layout_marginBottom="24dp" />

            <!-- Fecha límite -->
            <TextView
                    android:text="Fecha límite"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <!-- Campo de fecha con ícono -->
            <EditText
                    android:id="@+id/etFechaLimite"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="32dp"
                    android:hint="Seleccionar fecha límite"
                    android:background="@drawable/edittext_background"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:drawablePadding="8dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/textBlack"
                    android:textSize="14sp" />

            <!-- Botón asignar -->
            <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAsignarReporte"
                    android:text="ASIGNAR REPORTE"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:backgroundTint="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"/>

        </LinearLayout>

    <!-- Indicador de carga centrado -->
    <FrameLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#62FFFFFF"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:backgroundTint="@color/white"
                android:padding="24dp">

            <ProgressBar
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:indeterminateTint="#90CAF9" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:text="Asignando reporte..."
                    android:textColor="@color/textBlack"
                    android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>