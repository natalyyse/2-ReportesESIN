<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Flecha de regreso -->
    <ImageView
        android:id="@+id/btnBackAcerca"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/outline_arrow_back_24"
        android:contentDescription="Volver"
        android:layout_marginTop="32dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título centrado -->
    <TextView
        android:id="@+id/tvTituloAcerca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca de"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#222"
        app:layout_constraintTop_toTopOf="@id/btnBackAcerca"
        app:layout_constraintBottom_toBottomOf="@id/btnBackAcerca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nombre de la app -->
    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sistema de Reportes ESIN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloAcerca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Descripción (justificada) -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/descripcion_app"
        android:textSize="15sp"
        android:textColor="#333"
        android:lineSpacingExtra="4dp"
        android:layout_margin="24dp"
        android:justificationMode="inter_word"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/tvAppName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMasInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Más información"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            app:icon="@drawable/ic_info"
            app:iconGravity="start"
            app:iconPadding="8dp"
            app:cornerRadius="16dp"
            app:backgroundTint="#3F51B5"
            app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />



    <!-- Versión -->
    <TextView
        android:id="@+id/tvVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Versión 1.2.0"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#555"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnMasInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Copyright abajo -->
    <TextView
        android:id="@+id/tvCopyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="© 2025 Isai Valqui - Yaseni Esquivel. Todos los derechos reservados."
        android:textSize="12sp"
        android:textColor="#999"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
