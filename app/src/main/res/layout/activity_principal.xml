<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.usuario.PrincipalActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F7F7F7">

        <!-- Botón de hamburguesa -->
        <ImageButton
                android:id="@+id/btnMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="6dp"
                android:src="@drawable/baseline_density_medium_24"
                android:contentDescription="Menú"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"/>

        <!-- Título Bienvenidos centrado -->
        <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenidos"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#000"
                android:textAlignment="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"/>

        <!-- Acto Inseguro Título -->
        <TextView
                android:id="@+id/txtActoTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Acto Inseguro"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/txtTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="24dp"/>

        <!-- Acto Inseguro Descripción -->
        <TextView
                android:id="@+id/txtActoDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Acción que pone en riesgo a una persona es un acto inseguro."
                android:textSize="19sp"
                android:textColor="#222"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/txtActoTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp"/>

        <!-- Acto Inseguro Imagen -->
        <ImageView
                android:id="@+id/img1"
                android:layout_width="260dp"
                android:layout_height="180dp"
                android:src="@drawable/acto_inseguro"
                android:scaleType="centerCrop"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtActoDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"/>

        <!-- Condición Insegura Título -->
        <TextView
                android:id="@+id/txtCondicionTitulo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Condición Insegura"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/img1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="24dp"/>

        <!-- Condición Insegura Descripción -->
        <TextView
                android:id="@+id/txtCondicionDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Estado o elemento peligroso en el entorno es una condición insegura."
                android:textSize="19sp"
                android:textColor="#222"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/txtCondicionTitulo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="24dp"/>

        <!-- Condición Insegura Imagen -->
        <ImageView
                android:id="@+id/img2"
                android:layout_width="260dp"
                android:layout_height="180dp"
                android:src="@drawable/condicion_insegura"
                android:scaleType="centerCrop"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/txtCondicionDesc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="18dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigation_view"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:menu="@menu/menu_drawer"
            app:itemIconSize="36dp"
            app:itemMaxLines="2"
            android:paddingTop="70dp"
            android:paddingBottom="80dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@color/menuBackgroundBlue"
            app:itemBackground="@drawable/menu_item_bg"
            app:itemTextColor="@color/menuTextWhite"
            app:itemIconTint="@color/menuTextWhite"/>


</androidx.drawerlayout.widget.DrawerLayout>

